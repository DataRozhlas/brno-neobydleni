@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  font-family Roboto, sans-serif
  .half
    position absolute
    top 0px
    bottom 0px
    width 50%
    &.left
      left 0px
      border-right 1px solid rgb(103,0,31)
      .leaflet-control-attribution
        display none
    &.right
      left 50%
      border-left 1px solid rgb(103,0,13)
      .leaflet-control-zoom
        display none
    h2
      position absolute
      top 0px
      width 100%
      font-size 15px
      color white
      margin 0px
      line-height 30px
      font-weight 500
      padding-left 10px
    &.left h2
      background rgb(152,0,67)
    &.right h2
      background rgb(165,15,21)
    .infobar
      position absolute
      top 30px
      height 50px
      padding-left 10px
      padding-top 6px
      padding-bottom 6px
      width 100%
      color white
      em
        font-style normal
        font-weight 500
    &.left .infobar
      background rgb(231,41,138)
    &.right .infobar
      background rgb(239,59,44)
    .map
      position absolute
      top 80px
      left 0px
      bottom 0px
      width 100%
      .slaveMarker
        width 16px
        height 16px
        border-radius 50%
        border 3px solid black
        background white
        opacity 0.5
